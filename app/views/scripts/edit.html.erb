<% @page_title = "Edit Script: #{@script.script_name}" %>

<%= link_to("<< Back to List", {:action => 'list'}, :class => 'back-link') %>

<div class="script-new">
  <h2>Update Script</h2>

  <%= form_for(:script, :url => {:action => 'update', :id => @script.id}) do |form| %>

    <%= render(:partial => "form", :locals => {:form => form}) %>

    <div class="form-buttons">
      <%= submit_tag("Update Script") %>
    </div>
  <% end %>
</div>

