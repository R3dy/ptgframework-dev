<% @page_title = "Delete Page: #{@host.ipv4_address}" %>

<%= link_to("Back to List", {:action => 'list'}, :class => 'back-link') %>

<div class="host delete">
  <h2>Delete Host</h2>

  <%= form_for(:host, :url => {:action => 'destroy', :id => @host.id}) do |f| %>

    <p>Are you sure you want to permanently delete this page?</p>

    <p class="reference-name"><%= @host.ipv4_address %></p>

    <div class="form-buttons">
      <%= submit_tag("Delete Host") %>
    </div>

  <% end %>
</div>
